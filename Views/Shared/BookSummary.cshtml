@model Book
<div>

    <h3> Title:  @Model.Title</h3>
    <!-- separate the name fields out to be right format for the model..break it into smallest form-->
    <p> Author First Name: @Model.AuthorFirstName</p>
    <p> Author Last Name: @Model.AuthorLastName</p>
    <p> Publisher: @Model.Publisher</p>
    <p>ISBN: @Model.ISBN</p>
    <p> Classification: @Model.Classification</p>
    <p>Category: @Model.Category</p>
    <p> Price:$@Model.Price</p>
    <p> Page Number: @Model.PageNumber</p>

    <form id="@Model.BookId" asp-page="/Cart" method="post">
        <input type="hidden" asp-for="BookId" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <span class="card-text p-1">
            @Model.Title
            <button type="submit" class="btn-success btn-sm pull-right" style="float:right">
                Add to Cart
            </button>
        </span>
    </form>
</div>

